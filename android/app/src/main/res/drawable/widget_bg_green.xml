<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base: darker, mostly opaque so text pops on any wallpaper -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#CC111111"/> <!-- 80% black -->
        </shape>
    </item>

    <!-- Tint layer: a hint of your brand green (#009949) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:startColor="#33009949"
            android:endColor="#00009949"
            android:angle="270" />
        </shape>
    </item>

    <!-- Soft “glass edge” outline -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke
                android:width="1dp"
                android:color="#33FFFFFF" />   <!-- 20% white -->
        </shape>
    </item>
</layer-list>
