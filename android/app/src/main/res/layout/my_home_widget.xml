<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg_green"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:padding="0dp"
        android:text="@null" />

    <!-- HEADER: logo + title + hijri (right) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="27dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:src="@drawable/sadaqa_logo" />

        <TextView
            android:id="@+id/company"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:includeFontPadding="false"
            android:text="Sadaqa Welfare Fund"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:padding="0dp"
        android:text="@null" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sunrise_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_sunny"
            android:tint="#FFFFFFFF" />

        <TextView
            android:id="@+id/sunrise"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:includeFontPadding="false"
            android:text="06:33 AM"
            android:textColor="#FFFFFFFF" />


        <TextView
            android:id="@+id/hijri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:includeFontPadding="false"
            android:text="19"
            android:textColor="#FFFFFFFF" />

        <TextView
            android:id="@+id/hijri_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:includeFontPadding="false"
            android:text=" Safar"
            android:textColor="#FFFFFFFF" />


    </LinearLayout>

    <TextView
        android:id="@+id/updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:includeFontPadding="false"
        android:paddingVertical="4dp"
        android:text="Updated: 14:06"

        android:textColor="#CCFFFFFF" />


    <TextView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#33FFFFFF"
        android:padding="0dp"
        android:text="@null" />

    <!-- TIMES PLATE -->
    <LinearLayout
        android:id="@+id/times_plate"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/plate_bg_glass"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingTop="10dp"
        android:paddingEnd="12dp"
        android:paddingBottom="10dp"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="Fajr"
                android:textAlignment="center"
                android:textColor="#E6FFFFFF"

                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:padding="0dp"
                android:text="@null" />

            <TextView
                android:id="@+id/fajr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="05:11"
                android:textColor="#FFFFFFFF"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/fajr_ampm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="@null"
                android:textColor="#CCFFFFFF" />
        </LinearLayout>

        <!-- Dhuhr -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="Dhuhr"
                android:textColor="#E6FFFFFF"

                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:padding="0dp"
                android:text="@null" />

            <TextView
                android:id="@+id/dhuhr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="12:21"
                android:textColor="#FFFFFFFF"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/dhuhr_ampm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="@null"
                android:textColor="#CCFFFFFF" />
        </LinearLayout>

        <!-- Asr -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="Asr"
                android:textColor="#E6FFFFFF"

                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:padding="0dp"
                android:text="@null" />

            <TextView
                android:id="@+id/asr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="02:51"
                android:textColor="#FFFFFFFF"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/asr_ampm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="@null"
                android:textColor="#CCFFFFFF" />
        </LinearLayout>

        <!-- Maghrib -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="Maghrib"
                android:textColor="#E6FFFFFF"

                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:padding="0dp"
                android:text="@null" />

            <TextView
                android:id="@+id/maghrib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="05:45"
                android:textColor="#FFFFFFFF"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/maghrib_ampm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="@null"
                android:textColor="#CCFFFFFF" />
        </LinearLayout>

        <!-- Isha -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="Isha"
                android:textColor="#E6FFFFFF"

                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:padding="0dp"
                android:text="@null" />

            <TextView
                android:id="@+id/isha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="06:15"
                android:textColor="#FFFFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/isha_ampm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="@null"
                android:textColor="#CCFFFFFF" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
